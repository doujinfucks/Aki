{
  "compilerOptions": {
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ESNext",
    "types": ["node"],
    "module": "commonjs",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "typeRoots": ["node_modules/@types", "typings"],
    "paths": {
      "@aki/*": ["*"]
    },
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**", "**/*.test.ts", "**/*.testhelper.ts"]
}
